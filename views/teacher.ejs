<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="teacher.css">
  <title>Social Worker Dashboard</title>
</head>
<body>
  <header>
    <div>
      <h1>Welcome to the Dashboard</h1>
    </div>

    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </header>

<h1>Hello <%= user.local.firstName %></h1>

<form method="POST" action="/addCourse">
  <label for="className">Class Name:</label><br>
  <input type="text" id="className" name="className"><br>

  <label for="Category">Category:</label><br>
  <input type="text" id="category" name="category"><br>

  <label for="className">Capacity:</label><br>
  <input type="text" id="capacity" name="capacity"><br>

  <label for="courseLength">Course Length:</label><br>
  <input type="text" id="courseLength" name="courseLength"><br>

  <label for="checklist">Checklist:</label><br>
  <textarea type="text" id="description" name="checklist"></textarea><br>   
 

  <label for="lname">Description:</label><br>
  <textarea type="text" id="description" name="description"></textarea><br><br>  

  <button id="submit" type="submit">Submit Class</button>

</form> 



<section class="container">


  <h2>Courses!</h2>

  <ul class="courseList">
    <% for(let i=0; i<courses.length; i++) { %>
      <% if(courses[i].status === 'In Progress' ){ %>
        <div class = "course">
            <%= courses[i].className %> 
            <li><%= courses[i].category %></li>
            <li><%= courses[i].capacity %></li>         
            <li><%= courses[i].courseLength %></li>
            <p><%= courses[i].checklist %></p>
            <p><%= courses[i].description %></p>
         
            <a href= 'edit?id=<%=courses[i]._id %>'><button class="edit" data-courseID=<%=courses[i]._id %>data-teacherID=<%= courses[i].teacherID %>>Edit Course</button></a>
            
            <button class="delete" data-courseID=<%=courses[i]._id %>data-teacherID=<%= courses[i].teacherID %>>Delete Course</button>         <!--ADD/Drop adding propert called data course ID and storing the value of course ID--> 

           </div>
        </li>
      <% } %>
      <% } %>      
  </ul>  
</section>


<script src="/teacher.js"></script>
</body>
</html>